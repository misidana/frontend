generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Users {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  reffCode    String   @unique
  username    String   @unique
  email       String   @unique
  phoneNumber String   @unique
  password    String
  balance     Float    @default(0)
  bonus       Float?   @default(0)
  profits     Float?   @default(0)
  country     String?
  referrers   String[] @default([])
  referrer    String?
  createdAt   DateTime @default(now())
}

model Deposit {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  username  String
  amount    Int
  image     String
  status    Boolean? @default(false)
  title     String   @default("Buy Balance")
  createdAt DateTime @default(now())
}

model Withdraw {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  username       String
  amount         Int
  country        String
  bankName       String
  rekeningName   String
  rekeningNumber String
  status         Boolean? @default(false)
  title          String   @default("Withdraw")
  createdAt      DateTime @default(now())
}

model PaymentsMethod {
  id           String @id @default(auto()) @map("_id") @db.ObjectId
  rekeningName String
  bankName     String
  noRekening   String
  image        String
}

model Invesment {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  username  String
  level     String
  amount    Int
  createdAt DateTime @default(now())
}

model Notifications {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  sender   String
  username String
  desc     String
  date     DateTime @default(now())
}
